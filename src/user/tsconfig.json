{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "composite": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
      },
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "references": [
    { "path": "../shared"}
  ]
}
