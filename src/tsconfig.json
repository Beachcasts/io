{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["types/*"]
      },
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "references":[
    { "path": "./admin" },
    { "path": "./api" }
  ]
}
